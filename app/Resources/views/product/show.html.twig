{% extends '@PassPlus/Admin/adminLayout.html.twig' %}

{% block content %}
    <div class="container">
        <h2>Product Detail </h2>
        <div class="row">
            <table>
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Pretax Price</th>
                    <th>Vat Rate</th>
                    <th>Status</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.catalog.name }}</td>
                    <td>{{ product.catalog.description }}</td>
                    <td>{{ product.pretaxPrice }}</td>
                    <td>{{ product.vatRate }}</td>
                    <td class="{{ product.state.color }}">{{ product.state.name }}</td>
                </tr>
                </tbody>
            </table>

            <ul>
                <li>
                    <a href="{{ path('orders_index') }}" class="btn blue">Back to the orders list</a>
                </li>
                <li>
                    <a href="{{ path('orders_show', {'id': product.orders.id}) }}" class="btn indigo">Back to this order</a>
                </li>
                <li>
                    <a href="{{ path('product_edit', { 'id': product.id }) }}" class="btn blue">Edit</a>
                </li>
                <li>
                    {{ form_start(delete_form) }}
                    <input type="submit" value="Delete" class="btn red">
                    {{ form_end(delete_form) }}
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
