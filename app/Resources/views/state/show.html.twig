{% extends '@PassPlus/Admin/adminLayout.html.twig' %}

{% block content %}
    <h2 class="center-align">Status</h2>
    <div class="container">
        <div class="row">
            <table>
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ state.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ state.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ state.description }}</td>
                </tr>
                <tr>
                    <th>Color</th>
                    <td class="{{ state.color }}">{{ state.color }}</td>
                </tr>
                <tr>
                    <th>Activated</th>
                    <td>{% if state.activated %}Yes{% else %}No{% endif %}</td>
                </tr>
                </tbody>
            </table>

            <ul>
                <li>
                    <a href="{{ path('state_index') }}" class="btn">Back to the list</a>
                </li>
                <li>
                    <a href="{{ path('state_edit', { 'id': state.id }) }}" class="btn indigo">Edit</a>
                </li>
                <li>
                    {{ form_start(delete_form) }}
                    <input type="submit" value="Delete" class="btn red">
                    {{ form_end(delete_form) }}
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
