{% extends '@JasderoPassePlat/Admin/adminLayout.html.twig' %}

{% block content %}
    <h2 class="center-align">Status</h2>
    <div class="container">
        <div class="row">
            <table>
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ state.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ state.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ state.description }}</td>
                </tr>
                <tr>
                    <th>Color</th>
                    <td class="{{ state.color }}">{{ state.color }}</td>
                </tr>
                <tr>
                    <th>Activated</th>
                    <td>{% if state.activated %}Yes{% else %}No{% endif %}</td>
                </tr>
                </tbody>
            </table>

            <div class="iconsBlock col s12 center-align">
                <a href="{{ path('state_index') }}" title="back to the list">
                    <button type="button" class="grey darken-3"><i class="medium material-icons">skip_previous</i></button>
                </a>
                <a href="{{ path('state_edit', { 'id': state.id }) }}" class="iconAsLink">
                    <button type="button" class="grey darken-3"><i class="medium material-icons">edit</i></button>
                </a>
                {{ form_start(delete_form) }}
                <button type="submit" title="delete" class="deleteIcon grey darken-3"><i class="medium material-icons">delete_forever</i></button>
                {{ form_end(delete_form) }}
            </div>
        </div>
    </div>
{% endblock %}
