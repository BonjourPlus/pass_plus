{% extends '@PassPlus/Admin/adminLayout.html.twig' %}

{% block content %}
    <h1>Status</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ state.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ state.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ state.description }}</td>
            </tr>
            <tr>
                <th>Weight</th>
                <td>{{ state.weight }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ state.color }}</td>
            </tr>
            <tr>
                <th>Activated</th>
                <td>{% if state.activated %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('state_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('state_edit', { 'id': state.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
