{% extends '@PassPlus/Admin/adminLayout.html.twig' %}

{% block content %}
    <h2 class="center-align">Status creation</h2>
    <div class="container">
        <div class="row">
            {{ form_start(form) }}
            {{ form_errors(form) }}
            {{ form_row(form.name) }}
            {{ form_row(form.description) }}
            {{ form_row(form.weight) }}
            {{ form_row(form.color, {'attr':{'class':'browser-default'}}) }}
            {{ form_row(form.activated) }}
            <button class="btn waves-effect waves-light" type="submit" name="action">Create
                <i class="material-icons right">send</i>
            </button>
            {{ form_end(form) }}
            <ul>
                <li>
                    <a href="{{ path('state_index') }}" class="btn">Back to the list</a>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
