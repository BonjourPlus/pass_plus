{% extends '@JasderoPassePlat/Admin/adminLayout.html.twig' %}

{% block content %}
    <h2 class="center-align">Vat</h2>
    <div class="container">
        <div class="row">
            <table>
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ vat.id }}</td>
                </tr>
                <tr>
                    <th>Rate</th>
                    <td>{{ vat.rate }}</td>
                </tr>
                </tbody>
            </table>

            <ul>
                <li>
                    <a href="{{ path('vat_index') }}" class="btn">Back to the list</a>
                </li>
                <li>
                    <a href="{{ path('vat_edit', { 'id': vat.id }) }}" class="btn indigo">Edit</a>
                </li>
                <li>
                    {{ form_start(delete_form) }}
                    <input type="submit" value="Delete" class="btn red">
                    {{ form_end(delete_form) }}
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
