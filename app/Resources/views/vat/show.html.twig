{% extends '@JasderoPassePlat/Admin/adminLayout.html.twig' %}

{% block content %}
    <div class="container">
        <div class="row">
            <h4 class="center-align">Vat</h4>
            <table>
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ vat.id }}</td>
                </tr>
                <tr>
                    <th>Rate</th>
                    <td>{{ vat.rate }}</td>
                </tr>
                </tbody>
            </table>

            <div class="iconsBlock col s12 center-align">
                <a href="{{ path('vat_index') }}" title="back to the list">
                    <button type="button" class="grey darken-3"><i class="medium material-icons">skip_previous</i></button>
                </a>
                <a href="{{ path('vat_edit', { 'id': vat.id }) }}" class="iconAsLink" title="edit">
                    <button class="grey darken-3"><i class="medium material-icons">edit</i></button>
                </a>
                {{ form_start(delete_form) }}
                <button type="submit" title="delete" class="deleteIcon grey darken-3"><i class="medium material-icons">delete_forever</i></button>
                {{ form_end(delete_form) }}
            </div>
        </div>
    </div>
{% endblock %}
