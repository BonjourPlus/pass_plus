{% extends '@JasderoPassePlat/Admin/adminLayout.html.twig' %}

{% block content %}
    <h2 class="center-align">Catalogs list</h2>
    <div class="container">
        <div class="row">


            <table class="striped tablesorter" id="catalogstable">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Pretaxprice</th>
                    <th>Vat rate</th>
                    <th>Activated</th>
                    <th>Products</th>
                    <th>Nb of Orders</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for catalog in catalogs %}
                    <tr>
                        <td><a href="{{ path('catalog_show', { 'id': catalog.id }) }}"
                               class="waves-effect waves-light btn">{{ catalog.id }}</a></td>
                        <td>{{ catalog.name }}</td>
                        <td>{{ catalog.description }}</td>
                        <td>{{ catalog.pretaxPrice }}</td>
                        <td>{{ catalog.vat.rate }}</td>
                        <td>{% if catalog.activated %}Yes{% else %}No{% endif %}</td>
                        <td>
                            {# counting  products with this catalog entry#}
                            {% set nbProducts = 0 %}
                            {% for product in products if product.catalog.id == catalog.id %}
                                {% set nbProducts = nbProducts+1 %}
                            {% endfor %}
                            <a href="{{ path('products_by_catalog', {'id': catalog.id}) }}">{{ nbProducts }}</a>
                        </td>
                        <td>
                            {# counting  orders with this catalog entry#}
                            <a href="{{ path('orders_by_catalog', {'id': catalog.id}) }}">
                                {{ render(controller('JasderoPassePlatBundle:Catalog:catalogInOrders', {'catalog': catalog.id})) }}</a>
                        </td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('catalog_edit', { 'id': catalog.id }) }}"
                                       class="waves-effect waves-light btn indigo">edit</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <ul class="center-align">
                <li>
                    <a href="{{ path('catalog_new') }}" class="iconAsLink" title="create a new catalog"><i class="medium material-icons">add_circle</i></a>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script>
        $(function () {
            $('#catalogstable').tablesorter();
        })
    </script>
{% endblock %}