{% extends '@JasderoPassePlat/Admin/adminLayout.html.twig' %}

{% block content %}
    <h2 class="center-align">Catalog</h2>
    <div class="container">
        <div class="row">
            <table>
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ catalog.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ catalog.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ catalog.description }}</td>
                </tr>
                <tr>
                    <th>Pretaxprice</th>
                    <td>{{ catalog.pretaxPrice }}</td>
                </tr>
                <tr>
                    <th>Activated</th>
                    <td>{% if catalog.activated %}Yes{% else %}No{% endif %}</td>
                </tr>
                </tbody>
            </table>

            <ul>
                <li>
                    <a href="{{ path('catalog_index') }}" class="btn">Back to the list</a>
                </li>
                <li>
                    <a href="{{ path('catalog_edit', { 'id': catalog.id }) }}" class="btn indigo">Edit</a>
                </li>
                <li>
                    {{ form_start(delete_form) }}
                    <input type="submit" value="Delete" class="btn red">
                    {{ form_end(delete_form) }}
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
