{% extends '@PassPlus/Admin/adminLayout.html.twig' %}

{% block content %}
    <h1>Catalog</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ catalog.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ catalog.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ catalog.description }}</td>
            </tr>
            <tr>
                <th>Pretaxprice</th>
                <td>{{ catalog.pretaxPrice }}</td>
            </tr>
            <tr>
                <th>Activated</th>
                <td>{% if catalog.activated %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('catalog_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('catalog_edit', { 'id': catalog.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
