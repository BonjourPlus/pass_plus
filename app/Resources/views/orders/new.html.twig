{% extends 'base.html.twig' %}

{% block content %}
    <h2 class="center-align">Commander</h2>
    <div class="container">
        <div class="row">
            <div class="col s6 offset-s3">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <button class="btn waves-effect waves-light" type="submit" name="action">Order
                    <i class="material-icons right"></i>
                </button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    <ul>
        {% if is_granted('ROLE_ADMIN') %}
            <li>
                <a href="{{ path('orders_index') }}" class="btn blue">Back to the list</a>
            </li>
            {% else %}
                <li>
                    <a href="{{ path('home') }}" class="btn blue">Back to home</a>
                </li>
        {% endif %}

    </ul>
{% endblock %}
