{% extends '@JasderoPassePlat/Admin/adminLayout.html.twig' %}

{% block content %}
    <h2 class="center-align">Create a new Order</h2>
    <div class="container">
        <div class="row">
            <div class="col s5 offset-s3">
                {{ form_start(form) }}
                {{ form_errors(form) }}
                {{ form_row(form.catalogs) }}
                {{ form_row(form.user) }}
                <button class="btn waves-effect waves-light" type="submit" name="action">Create
                    <i class="material-icons right">send</i>
                </button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    <ul>
        <li>
            <a href="{{ path('orders_index') }}" class="btn blue">Back to the list</a>
        </li>
    </ul>
{% endblock %}
