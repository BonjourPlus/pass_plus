{% extends '@JasderoPassePlat/Admin/adminLayout.html.twig' %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col s12">
                <h3 class="center-align">Manage orders in Google Drive</h3>
                <div class="center-align">
                    <a href="{{ path('checking', {'action' : true}) }}" class="btn">Scan folder for new orders</a>
                </div>
                {% if newOrders %}
                    <p><strong>Number of new orders created : {{ newOrders }}</strong></p>
                {% endif %}
                {% if errors %}
                    {% for error in errors %}
                        <p>{{ error }}</p><br>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}